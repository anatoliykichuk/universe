<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/earth_image"
        android:layout_width="@dimen/recycler_item_earth_image_width"
        android:layout_height="@dimen/recycler_item_earth_image_height"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/bg_earth" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/earth_title"
        style="@style/recyclerItemEarthTitleStyle"
        android:text="@string/recycler_item_earth_image_title"
        app:layout_constraintBottom_toBottomOf="@+id/earth_image"
        app:layout_constraintEnd_toStartOf="@+id/earth_image"
        app:layout_constraintTop_toTopOf="@+id/earth_image" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/wiki_image"
        style="@style/recyclerItemWikiStyle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_wikipedia" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/description"
        style="@style/recyclerItemDescriptionStyle"
        android:text="@string/recycler_item_earth_additional_description_title"
        app:layout_constraintBottom_toBottomOf="@id/earth_image"
        app:layout_constraintEnd_toStartOf="@+id/barrier"
        app:layout_constraintStart_toEndOf="@+id/earth_image"
        app:layout_constraintTop_toTopOf="@+id/earth_image" />

    <androidx.constraintlayout.widget.Barrier
        android:id="@+id/barrier"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:barrierDirection="end"
        app:constraint_referenced_ids="wiki_image" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/recycler_item_earth_view_height"
        android:background="@color/black"
        app:layout_constraintBottom_toBottomOf="@+id/earth_image"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>