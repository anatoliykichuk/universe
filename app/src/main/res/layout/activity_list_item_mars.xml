<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/mars_image"
        android:layout_width="@dimen/recycler_item_mars_image_width"
        android:layout_height="@dimen/recycler_item_mars_image_height"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/bg_mars" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/mars_title"
        style="@style/listItemMarsTitleStyle"
        android:text="@string/recycler_item_mars_image_title"
        app:layout_constraintBottom_toBottomOf="@id/mars_image"
        app:layout_constraintStart_toEndOf="@id/mars_image"
        app:layout_constraintTop_toTopOf="@id/mars_image" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/mars_description"
        style="@style/listItemMarsDescriptionStyle"
        android:text="@string/mars_description_text"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mars_image"
        tools:visibility="visible" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/add_item"
        style="@style/listChangeButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"

        app:layout_constraintEnd_toStartOf="@+id/move_item"

        app:srcCompat="@drawable/ic_add_item" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/remove_item"
        style="@style/listChangeButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/add_item"
        app:layout_constraintEnd_toStartOf="@+id/move_item"
        app:srcCompat="@drawable/ic_remove_item" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/move_up_item"
        style="@style/listChangeButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/add_item"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_move_up_item" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/move_down_item"
        style="@style/listChangeButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/remove_item"
        app:layout_constraintTop_toBottomOf="@id/move_up_item"
        app:srcCompat="@drawable/ic_move_down_item" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/move_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:tint="@color/cardview_shadow_start_color"
        app:layout_constraintBottom_toBottomOf="@+id/mars_title"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/mars_title"
        app:srcCompat="@drawable/ic_drag_handle" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/recycler_item_mars_view_height"
        android:background="@color/black"
        app:layout_constraintBottom_toBottomOf="@+id/mars_image" />

</androidx.constraintlayout.widget.ConstraintLayout>