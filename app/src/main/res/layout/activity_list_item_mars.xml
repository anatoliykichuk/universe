<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/mars_image"
        android:layout_width="@dimen/recycler_item_mars_image_width"
        android:layout_height="@dimen/recycler_item_mars_image_height"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/bg_mars" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/mars_title"
        style="@style/listItemMarsTitleStyle"
        android:text="@string/recycler_item_mars_image_title"
        app:layout_constraintBottom_toBottomOf="@id/mars_image"
        app:layout_constraintStart_toEndOf="@id/mars_image"
        app:layout_constraintTop_toTopOf="@id/mars_image" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/recycler_item_mars_view_height"
        android:background="@color/black"
        app:layout_constraintBottom_toBottomOf="@+id/mars_image"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>